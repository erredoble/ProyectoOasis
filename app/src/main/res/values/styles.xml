<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextoLectura">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:padding">7dp</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TitulosDescripFuente" parent="TextoLectura">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextoTitulo" parent="TextoLectura">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextoNombreComun" parent="TextoTitulo">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="EstiloBoton" parent="TextoLectura">
        <item name="android:background">@drawable/estilo_boton</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:padding">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/colorNegro</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>