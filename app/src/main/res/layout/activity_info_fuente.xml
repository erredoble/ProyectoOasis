<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.InfoFuenteActivity">

    <ImageView
        android:id="@+id/imgFuente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/foto_fuente_provisional" />

    <TextView
        android:id="@+id/tituloDescripcion"
        style="@style/TitulosDescripFuente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgFuente"
        android:text="DescripciÃ³n" />

    <TextView
        android:id="@+id/lblDescripcion"
        style="@style/TextoLectura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloDescripcion"
        android:text="Aqui toda la descripcion de la fuente" />

    <Button
        android:id="@+id/btn_Ir"
        style="@style/EstiloBoton"
        android:layout_above="@+id/btn_volver"
        android:text="IR" />

    <Button
        android:id="@+id/btn_volver"
        style="@style/EstiloBoton"
        android:layout_alignParentBottom="true"
        android:text="VOLVER" />


</RelativeLayout>