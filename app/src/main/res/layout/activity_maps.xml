<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.AcercaActivity">

    <TextView
        android:id="@+id/lblCoordenadas"
        android:layout_alignParentStart="true"
        style="@style/TextoLectura"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlanco"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_below="@+id/lblCoordenadas"
        style="@style/TextoLectura"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlanco"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"/>


    <androidx.fragment.app.FragmentContainerView
        android:layout_below="@+id/lblDescripcion"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controlador.MapsActivity" />

    <Button
        android:id="@+id/btn_localizar"
        style="@style/BotonLocalizar"
        android:layout_alignParentBottom="true"
        android:text="LOCALIZAME"
        android:visibility="invisible" />

</RelativeLayout>